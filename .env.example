# ──────────────── Server ────────────────
PORT=5000
NODE_ENV=development

# ──────────────── Database ────────────────
MONGODB_URI=mongodb://localhost:27017/lifereminder

# ──────────────── Auth ────────────────
JWT_SECRET=your_super_secret_key
JWT_EXPIRES_IN=30d

# ──────────────── SMTP (Email) ────────────────
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=Life Reminder <noreply@lifereminder.app>

# ──────────────── WhatsApp ────────────────
WHATSAPP_API_URL=https://graph.facebook.com/v18.0/YOUR_PHONE_ID/messages
WHATSAPP_API_KEY=your_whatsapp_api_key

# ──────────────── Cron ────────────────
CRON_REMINDER_SCHEDULE=0 7 * * *
CRON_TIMEZONE=Asia/Kolkata

# ──────────────── Notifications ────────────────
NOTIFICATION_EMAIL_ENABLED=true
NOTIFICATION_WHATSAPP_ENABLED=true
